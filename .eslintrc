{
  env: {
    es6: true,
    browser: true
  },
  extends: ["eslint:recommended", "standard"],
  rules: {
    "no-console": [2, { allow: ["warn", "error"] }],
    "semi": [2, "never"],
    "no-extra-semi": 2,
    "code": 80,
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "no-var": 0
  }
}

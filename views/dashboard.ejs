<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ"
        crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn"
        crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dashboard</title>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#genRoomButton').click(function(){
                    var chars = "0123456789ABCDEFGHIJKLMNOPQRSTUVWXTZabcdefghiklmnopqrstuvwxyz";
                    var string_length = 10;
                    var uniqueRoomId = '';
                    for (var i=0; i<string_length; i++) {
                        var rnum = Math.floor(Math.random() * chars.length);
                        uniqueRoomId += chars.substring(rnum,rnum+1);
                    }
                $('#genRoomUrl').val(`www.localhost:8000/room/${uniqueRoomId}`);
                $('#enterRoom').removeAttr('disabled');
            })
            $('#closeRoomButton').click(function(){
                $('#enterRoom').attr('disabled', "disabled");
            })
        })
    </script>
</head>

<!-- DELETE USER MODAL -->
<div class="modal fade" id="deleteUser" tabindex="-1" role="dialog" aria-labelledby="deleteUser" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <h6>Are you sure that you want to delete this user?</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Delete User</button>
            </div>
        </div>
    </div>
</div>

<!-- CLOSE ROOM MODAL -->
<div class="modal fade" id="closeRoom" tabindex="-1" role="dialog" aria-labelledby="closeRoom" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <h6>Are you sure you want to close this room?</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close Room</button>
            </div>
        </div>
    </div>
</div>

<body>
    <div class="container">

        <h3>Welcome to the LearnUp Dashboard!</h3>
        <div class="row gen-room">
            <div class="col-md-2"></div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-4">
                        <button type="button" name="" id="genRoomButton" class="btn btn-block btn-primary">Generate Room</button>
                    </div>
                    <div class="form-group col-md-4 close-room" id="close-room-div">
                        <button type="button" id="closeRoomButton"name="" class="btn btn-block btn-warning">Close Room</button>
                    </div>
                    <div class="col-md-2"></div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <input type="text" id="genRoomUrl" class="form-control" name="" placeholder="" >
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <button type="button" name="" id="enterRoom" class="btn btn-primary disabled" disabled>Enter Room</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
        <div class="section">
            <h4>User Settings</h4>
            <table class="table table-striped table-hover align-middle col-md-12">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Admin Level</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row">omar.ihmoda@gmail.com</td>
                        <td>
                            <div class="form-group">
                                <select class="form-control" name="">
                                    <option>Super Admin</option>
                                    <option>Admin</option>
                                    <option>Teacher</option>
                                </select>
                            </div>
                        </td>
                        <td>
                            <button type="button" name="" class="btn btn-warning" data-toggle="modal" data-target="#closeRoom">Close Room</button>
                            <button type="button" name="" class="btn btn-danger" data-toggle="modal" data-target="#deleteUser">Delete User</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="section">
            <h4>Create / Edit User Accounts</h4>
            <div class="row management">
                <div class="col-md-1"></div>
                <form class="col-md-5 admin-tools">
                    <h5>Register New User</h5>
                    <div class="form-group">
                        <label for="newuseremail">Email</label>
                        <input type="text" class="form-control" name="newuseremail" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <button type="button" name="" class="btn btn-primary pull-right">Add User</button>
                    </div>
                </form>

                <form class="col-md-5 admin-tools">
                    <h5>Edit Existing User</h5>
                    <div class="form-group">
                        <label for="edituseremail">Email</label>
                        <input type="text" class="form-control" name="edituseremail" placeholder="Enter user email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Enter new password">
                    </div>
                    <div class="form-group">
                        <label for="confirmpw">Confirm PW</label>
                        <input type="password" class="form-control" name="confirmpw" placeholder="Confirm new password">
                    </div>
                    <div class="form-group">
                        <button type="button" name="" class="btn btn-primary pull-right">Edit User</button>
                    </div>
                </form>
                <div class="col-md-1"></div>
            </div>
        </div>
    </div>
</body>

<script type="text/javascript">
    document.getElementById('genRoomButton').addEventListener('click', closeRoom)
    document.getElementById('close-room-div').addEventListener('click', resetRoom)

    function closeRoom() {
        document.getElementById('genRoomButton').innerHTML = "New Room"
        document.getElementById('close-room-div').style.display = "inline"
        document.getElementById('enterRoom').classList.remove("disabled")
    }

    function resetRoom() {
        document.getElementById('close-room-div').style.display = "none"
        document.getElementById('genRoomButton').innerHTML = "Generate Room"
        document.getElementById('enterRoom').classList.add("disabled")
    }

</script>

</html>